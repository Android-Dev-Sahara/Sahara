<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_notification_special_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/card_special_circleImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/general_notification"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="3dp"/>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="8.9"
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/card_special_donorname"
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:fontFamily="@font/muli_black"
                    android:layout_height="wrap_content"
                    android:text="Aakash Dubey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="6"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/card_special_location"
                        android:layout_width="0dp"
                        android:textSize="12sp"
                        android:fontFamily="@font/muli_black"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="location"/>
                    <TextView
                        android:id="@+id/card_special_date"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:fontFamily="@font/muli_black"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="date"/>
                    <TextView
                        android:id="@+id/card_special_time"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/muli_black"
                        android:layout_height="wrap_content"
                        android:text="time"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/card_special_noofpersons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:fontFamily="@font/muli_black"
                    android:text="No of Persons : "/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
               <ImageButton
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:tint="@color/blue"
                   android:scaleType="centerCrop"
                   android:src="@drawable/accept_donation_image_notification_special"/>

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="40dp"
                    android:tint="@color/red"
                    android:scaleType="centerCrop"
                    android:src="@drawable/accept_donation_image_notification_special"/>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>