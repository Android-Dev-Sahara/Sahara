<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="9dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="7dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_home_ngoname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/muli_black"
                android:text="Aakash Dubey"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/card_home_time"
                android:layout_gravity="center"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_black"
                android:text="12:00 hrs"
                android:textSize="12sp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/card_home_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/muli_black"
                android:text="Infocity"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/card_home_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/muli_black"
                android:text="Ahmedabad"
                android:textSize="14sp" />
        </LinearLayout>

            <ImageView
                android:id="@+id/card_home_image"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:elevation="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/intro_image_ngo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8"
            android:paddingTop="3dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/card_home_like"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:layout_gravity="bottom"
                android:src="@drawable/card_like_vec"/>
            <View
                android:layout_width="2dp"
                android:background="@color/black"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/card_home_share"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:layout_gravity="center"
                android:src="@drawable/card_share"/>
            <View
                android:layout_width="2dp"
                android:background="@color/black"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/card_home_date"
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_marginEnd="15dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_black"
                android:text="12-12-2019"
                android:textSize="12sp" />


        </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>