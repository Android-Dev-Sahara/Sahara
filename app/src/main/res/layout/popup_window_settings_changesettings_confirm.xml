<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:background="#424242"
    android:elevation="1dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/muli_black"
        android:text="@string/change_setting_popup_window_title"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="3dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="20"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/editsettings_pop_btn_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/muli_black"
            android:elevation="10dp"
            android:background="@drawable/popup_window_rectangle_shape_button"
            android:text="@string/change_setting_popup_window_btn_reject"/>

       <Button
           android:id="@+id/editsettings_pop_btn_confirm"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="10"
           android:layout_marginStart="15dp"
           android:fontFamily="@font/muli_black"
           android:text="@string/change_setting_popup_window_btn_confirm"
           android:layout_marginEnd="10dp"
           android:elevation="10dp"
           android:background="@drawable/popup_window_rectangle_shape_button"/>

    </LinearLayout>


</LinearLayout>